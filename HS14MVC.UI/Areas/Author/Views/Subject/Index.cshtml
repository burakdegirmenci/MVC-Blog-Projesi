@model IEnumerable<HS14MVC.UI.Areas.Author.Models.SubjectVMs.SubjectListVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int row = 0;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-light">Konularım</h2>
        <a class="btn btn-primary" asp-action="Create">Yeni Konu Oluştur</a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <div class="btn-group d-flex justify-content-center" role="group">
                            @Html.ActionLink("Düzenle", "Update", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-primary" })
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-danger" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>