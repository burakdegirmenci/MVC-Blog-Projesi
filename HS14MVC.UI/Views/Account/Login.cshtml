@model HS14MVC.UI.Models.LoginVm
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="text-center my-5">
        <h1 class="fw-bolder">Hoşgeldiniz!</h1>
        <p class="lead mb-0">Giriş yapmak için e-mail ve şifrenizi girin!</p>
    </div>
</div>

<!-- Page content-->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Login form-->
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-dark text-white">
                    <h8 class="text-center font-weight-light my-4">Giriş Yap</h8>
                </div>
                <div class="card-body">
                    <form asp-area="Account" asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">E-mail</label>
                            <input type="email" asp-for="Email" class="form-control" placeholder="E-mail adresinizi girin" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Şifre</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Şifrenizi girin" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Giriş Yap" class="btn btn-dark btn-block" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="#">Hesabınız yok mu? Kayıt ol!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
