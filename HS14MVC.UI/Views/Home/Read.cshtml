@model HS14MVC.UI.Models.GuestArticleReadVM

@{
	ViewData["Title"] = "Read";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" data-aos="fade-up">
	<div class="row g-5">

		<div class="col-lg-8">
			<div class="card mb-4">
				<a href="#!">
					<img class="card-img-top" style="width:854px; height: 351px; object-fit: cover;" src="@($"data:image/png;base64,{Convert.ToBase64String(Model.Image)}")" alt="..." />
				</a>
				<div class="card-body">
					<h2 class="card-title text-center">@Html.DisplayFor(modelItem => Model.Title)</h2>
					<p class="card-text">
					<p class="card-text">@Html.DisplayFor(modelItem => Model.Content)</p>
					</p>
				</div>
			</div>
		</div>

		<!-- Trending Section -->
		<div class="col-lg-4">

			<div class="trending">
				<h3>Trending</h3>
				<ul class="trending-post">


					@foreach (var newItem in @Model.Articles.ToList().OrderByDescending(x => x.ViewCount).Take(6))
					{
						<li>
							<a asp-area="" asp-controller="Home" asp-action="Read" asp-route-id="@newItem.Id">
								<span class="number">1</span>
								<h3>@newItem.Title</h3>
								<span class="author">@newItem.AuthorFirstName @newItem.AuthorLastName</span>
							</a>
						</li>
					}
				</ul>
			</div>

		</div> <!-- End Trending Section -->
	</div>
</div>
